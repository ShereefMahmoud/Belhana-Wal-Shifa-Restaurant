@model resturant_pro.Models.User
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<body style="background-image:url('../../images/backgrond.jpg');">
    @using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.UserName)
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.UserName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <input type="submit" name="name" value="Login" style="margin:8px;" class="btn btn-primary" />

        <!-- Create -->
        <span class="form-group">
            <input type="button" onclick="location.href='@Url.Action("Index", "Home")'" value="Clear" class="btn btn-info" />
        </span>

        <!-- Create -->
        <span class="form-group">
            <input type="button" onclick="location.href='@Url.Action("Add", "User")'" value="Create New Account" class="btn btn-info" />
        </span>



    }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>